@using IdentityManager.Models.ViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="account-container">
    <div class="account-box ">
        <form asp-action="ForgotPassword" method="post">

        <h2 class="text-center mb-4">Reset Password</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" placeholder="Enter your Email" class="form-control" />

            </div>
            <input type="submit" value="Send Reset Link" class="btn btn-success w-100 p-2" />
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class=" text-decoration-none mt-3">Back</a>

            </di>

        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}