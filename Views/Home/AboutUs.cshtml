    <section class="why-choose-us bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose Foody?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow">
                        <div class="card-body text-center">
                            <i class="fas fa-bolt fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Fast Delivery</h5>
                            <p class="card-text">Average delivery time under 30 minutes</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow">
                        <div class="card-body text-center">
                            <i class="fas fa-star fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Quality Assurance</h5>
                            <p class="card-text">Verified restaurants & quality checks</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow">
                        <div class="card-body text-center">
                            <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">5000+ Dishes</h5>
                            <p class="card-text">Wide variety of cuisines to choose from</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Team -->
    <section class="our-team py-5">
        <div class="container">
            <h2 class="text-center mb-5">Meet Our Team</h2>
            <div class="row g-4">
