@using UsersApp.ViewModels
@model List<UserRoleViewModel>

<h2>المستخدمون والأدوار</h2>

<form method="get" asp-action="UsersWithRoles" class="mb-3">
    <div class="input-group mt-5">
        <input type="text" name="searchTerm" class="form-control" placeholder="ابحث عن مستخدم أو دور"  />
        <button type="submit" class="btn btn-primary">بحث</button>
    </div>
</form>

<table class="table table-bordered table-striped table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>اسم المستخدم</th>
            <th>الأدوار</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Roles</td>
                <td>
                    <a asp-action="ManageUserRoles" asp-route-userId="@user.UserId" class="btn btn-warning btn-sm">إدارة الأدوار</a>
                </td>
            </tr>
        }
    </tbody>
</table>